<html>
<head>
    <title>iotimTaskList</title>
    <link rel="stylesheet" type="text/css" href="css/main.css">
</head>
<body>
<form action="/logout" method="post">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <input type="submit" value="Sign Out"/>
</form>
<div id="appBlock">
<div class="inputBlock">
    <h1>Add your task here</h1>
    <form method="post" id="taskCreator">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <input class="nameInput formInputs" type="text" name="task" placeholder="Write your task">
        <select class="formSelector formInputs" name="status" form="taskCreator">
              <option value="Done">Done</option>
              <option value="Stuck">Stuck</option>
              <option value="Waiting">Waiting</option>
              <option value="In Progress">In Progress</option>
        </select><br>
        <button class="addTaskBtn" id="addBtn" type="submit">Add Task</button>
        <button class="addTaskBtn" id="refreshBtn" type="reset">Refresh</button>
    </form>
</div>
        <div class="taskListBlock">
            <div class="filterBlock">
                <h2>Task List</h2>
                <form id="filterForm" method="post" action="filter">
                    <p>Filter tasks by status:</p>
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
                    <input class="formInput" type="text" name="filter">
                    <button id="filterBtn" type="submit">Find</button>
                </form>
            </div>
            {{#myTasks}}
            <div class="theTaskBlock">
                <div class="taskConstructor idBlock"><b class="idText">{{id}}</b></div>
                <div class="taskConstructor taskBlock"><span class="taskText">{{task}}</span></div>
                <div class="taskConstructor statusBlock"><span class="statusText{{id}}">{{status}}</span></div>
            </div>
            {{/myTasks}}
        </div>
</div>
</body>
</html>